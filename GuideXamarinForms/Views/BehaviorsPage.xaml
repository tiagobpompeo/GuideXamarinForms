<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:behaviors="clr-namespace:GuideXamarinForms.Behaviors;assembly=GuideXamarinForms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="GuideXamarinForms.Views.BehaviorsPage">
    <ContentPage.Content>
      
        <StackLayout>
               <Label HorizontalTextAlignment="Start" Text="Cep Behavior : "/>
             <Entry x:Name="txtCep" Placeholder="Cep" HeightRequest="40" TextColor="Black" FontSize="16" Keyboard="Numeric">
                <Entry.Behaviors>
                    <behaviors:EntryCepFormatterBehavior />
                </Entry.Behaviors>
            </Entry>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
